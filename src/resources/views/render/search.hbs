<div style="
   --col-gutter-y: 4px;
   --col-sm-gutter-y: 8px;
   --col-md-gutter-y: 12px;
   --col-lg-gutter-y: 16px;
   --col-xl-gutter-y: 20px;
   --col-xxl-gutter-y: 24px;" class="grid wide">
   <form method="get" class="row g-3 mt-4">
      <div class="col-12">
         <label for="search" class="visually-hidden">Search</label>
         <input type="text" name="q" class="form-control" id="search" placeholder="Search..." />
      </div>

      <div class="col-12">
         <select name="type" class="form-select" aria-label="Default select example">
            <option value="" selected>--You are--</option>
            <option value="pro">Pro</option>
            <option value="noob">Noob</option>
            <option value="s-pro">Super pro</option>
         </select>
      </div>

      <div class="col-12">
         <button type="submit" class="btn btn-primary mb-3">Search</button>
      </div>
   </form>
</div>