<div style="
   --col-gutter-y: 4px;
   --col-sm-gutter-y: 8px;
   --col-md-gutter-y: 12px;
   --col-lg-gutter-y: 16px;
   --col-xl-gutter-y: 20px;
   --col-xxl-gutter-y: 24px;" class="grid wide mt-4" style="padding: 0 30px;">
   <div class="row">
      {{#each videos}}
      <div class="col-12 col-sm-6 col-md-6 col-xl-4 d-flex">
         <div class="card" style="flex: 1;">
            <a class="d-flex justify-content-center" style="height: 100px;" href="/videos/{{this.slug}}"><img
                  style="object-fit: contain; height: 100%;" src={{this.img}} alt={{this.name}} />
            </a>
            <div class="card-body d-flex flex-column">
               <a href="/videos/{{this.slug}}">
                  <h5 class="card-title text-center">{{this.name}}</h5>
               </a>
               <p style="overflow: hidden;
                        display: -webkit-box;
                        -webkit-line-clamp: 6;
                        -webkit-box-orient: vertical;
                        text-overflow: ellipsis;" class="clamp-text clpt-6">{{this.description}}</p>
               <a href="/videos/{{this.slug}}" class="btn btn-primary mt-auto">Xem ngay</a>
            </div>
         </div>
      </div>
      {{/each}}
   </div>
</div>