{{#with video}}
<div class="mt-4 grid wide">
    <h1>Cập nhật video</h1>
    <a href="/me/stored/videos" class="btn btn-primary btn-sm ms-1">
        <i class="fa-regular fa-chevron-left mx-1"></i>
        Trở về
    </a>
    <form class="mt-4" method="post" action="/videos/{{this._id}}?_method=PATCH">
        <div class="mb-3">
            <label for="courseName" class="form-label">Tiêu đề</label>
            <input value="{{name}}" required name="name" type="text" class="form-control" id="courseName"
                placeholder="Thêm tiêu đề video...">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea required name="description" style="resize: none;" class="form-control" id="description"
                placeholder="Thêm mô tả..." rows="8">{{description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input value={{videoId}} required name="videoId" type="text" class="form-control" id="videoId">
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Lưu lại</button>
        </div>
    </form>
</div>
{{/with}}