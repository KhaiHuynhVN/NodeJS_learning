<div class="mt-4 grid wide">
    <form method="post" action="/videos/store">
        <h1>Đăng video</h1>
        <div class="mb-3">
            <label for="courseName" class="form-label">Tiêu đề</label>
            <input required name="name" type="text" class="form-control" id="courseName"
                placeholder="Thêm tiêu đề video...">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Mô tả</label>
            <textarea required name="description" style="resize: none;" class="form-control" id="description"
                placeholder="Thêm mô tả..." rows="8"></textarea>
        </div>
        <div class="mb-3">
            <label for="videoId" class="form-label">Video ID</label>
            <input required name="videoId" type="text" class="form-control" id="videoId">
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Đăng video</button>
        </div>
    </form>
</div>